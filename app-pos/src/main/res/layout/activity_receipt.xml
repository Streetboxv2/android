<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            android:background="@color/colorPOS"
            android:theme="@style/ToolbarTheme">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_search"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            app:queryHint="No Transaksi"
            android:inputType="text"
            android:minLines="1"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/poppins_regular"
            android:drawablePadding="@dimen/_10sdp"
            android:background="@drawable/search_input_bg" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/10/2020"
            android:gravity="center"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:drawableTint="@color/grey"
            android:background="@drawable/search_input_bg"
            android:drawableStart="@drawable/ic_calendar"
            android:layout_marginStart="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13/10/2020"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:gravity="center"
            android:drawablePadding="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:drawableTint="@color/grey"
            android:background="@drawable/search_input_bg"
            android:drawableStart="@drawable/ic_calendar"
            android:layout_marginStart="@dimen/_10sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cari"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="Cari" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_bill_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nomor Antrian"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jam"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/tv_no_trx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No Transaksi"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:layout_weight="0.2" />
        <TextView
            android:id="@+id/tv_jumlah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grand Total"
            android:layout_weight="0.2" />


        <TextView
            android:id="@+id/tv_status_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:gravity="right"
            android:layout_weight="0.2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>